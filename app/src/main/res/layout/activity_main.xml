<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.ekn.gruzer.gaugelibrary.HalfGauge
        android:id="@+id/halfGauge"
        android:layout_width="200dp"
        android:padding="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="0dp"
        android:layout_height="100dp" />


    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/speedometer"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:sv_unit="min"
        app:sv_minSpeed="0"
        app:sv_maxSpeed="60"
        app:sv_indicator="NormalIndicator"
        app:sv_indicatorColor="@color/black"
        app:sv_indicatorWidth="4dp"
        app:sv_centerCircleRadius="10dp"
        app:sv_startDegree="180"
        app:sv_endDegree="360"
        app:sv_markColor="#414141"
        app:sv_markWidth="1dp"/>

</LinearLayout>